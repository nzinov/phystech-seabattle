{
  "name": "game",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bgio-postgres": "^1.0.0",
    "boardgame.io": "^0.50.2",
    "deepcopy": "^2.1.0",
    "esm": "^3.2.25",
    "koa": "^3.0.0",
    "koa-static": "^5.0.0",
    "react": "^19.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "react-scroll-to-bottom": "^4.2.0",
    "react-tooltip": "^5.29.1",
    "universal-cookie": "^8.0.1",
    "uuid": "^11.1.0"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "vitest",
    "preview": "vite preview",
    "build-server": "npx tsc src/server.ts --outDir build --target es2020 --module commonjs --esModuleInterop --skipLibCheck",
    "serve": "npm run build-server && node build/server.js",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run lint && npm run format:check && npm run build",
    "prepare": "husky",
    "lint-staged": "npm run lint"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "@koa/cors": "^5.0.0",
    "cookie": "^0.7.2",
    "engine.io": "^6.6.2",
    "socket.io": "^4.8.1",
    "socket.io-parser": "^4.2.4",
    "svelte": "^4.2.19",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/koa-static": "^4.0.4",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "vite-plugin-environment": "^1.1.3",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^6.1.1",
    "vitest": "^3.2.4"
  }
}
